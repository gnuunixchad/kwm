+        if (new_tags != 0) self.set_tag(new_tags);
+        return;
+    }
+
+    var new_tags: u32 = 0;
+    var tag_mask: u32 = 1;
+
+    for (0..total_tags) |i| {
+        if (current_tags & tag_mask != 0) {
+            var found = false;
+            var test_index = i;
+
+            for (0..total_tags) |_| {
