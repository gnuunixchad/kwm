+                    total_tags - 1
+                else
+                    test_index - 1;
+
+                const test_mask = @as(u32, 1) << @as(u5, @intCast(test_index));
+                if (occupied_tags & test_mask != 0) {
+                    new_tags |= test_mask;
+                    found = true;
+                    break;
+                }
+            }
+
+            if (!found and (occupied_tags & tag_mask != 0)) new_tags |= tag_mask;
+        }
+        tag_mask <<= 1;
+    }
